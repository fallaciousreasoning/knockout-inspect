{
    "manifest_version": 2,
    "name": "knockout-inspect",
    "description": "An inspector for Knockout JS",
    "version": "0.0.1",
    "icons": {
        "64": "icons/icon.png"
    },
    "permissions": ["contextMenus"],
    "content_scripts": [{
        "matches": [
            "*://*.mozilla.org/*"
        ],
        "js": [
            "content_script.js"
        ]
    }],
    "background": {
        "scripts": "background/script.js"
    },
    "browser_action": {
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "browserAction/index.html",
        "default_title": "knockout-inspect"
    },
    "page_action": {
        "default_icon": {
            "64": "icons/icon.png"
        },
        "default_popup": "pageAction/index.html",
        "default_title": "knockout-inspect"
    }
}